<!-- フォローしているかどうかでfollow,unfollowのhtmlに飛ぶ -->
<% if user_signed_in? %>

 <% unless user == current_user %>
	<div id="follow_form">
		<% if current_user.following?(user) %>
		<%= render 'unfollow', user: user %>
	<% else %>
		<%= render 'follow', user: user %>
	<% end %>
	</div>
<% end %>

<% end %>

