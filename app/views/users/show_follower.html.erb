
<div class = "container">

<div class = "row">

<div class = "col-xs-3">



</div>

<div class= "col-xs-9">

	<h2>Followers</h2>

		<% @user.followers.each do |user| %>
			<table class ="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
  						<td><%= user.name %> </td>
  						<td><%= link_to '詳細', user_path(user) %></td>
					</tr>
				</tbody>

			</table>

		<% end %>

	<%= link_to '戻る', user_path(current_user) %>

</div>

</div>
</div>